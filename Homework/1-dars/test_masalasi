function yoshAniqlash(tugilganYil) {
    let hozirgiYil = new Date().getFullYear();
    let yosh = hozirgiYil - tugilganYil;

    if (yosh < 18) {
        console.log("Yosh: " + yosh + " — Voyaga yetmagan");
    } else {
        console.log("Yosh: " + yosh);
    }
}
